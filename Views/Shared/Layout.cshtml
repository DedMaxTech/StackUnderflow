<!DOCTYPE html>
<html lang="en">
<head>	
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Stack Underflow</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="/styles/main.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/stackoverflow-light.min.css">
	<link href="https://cdn.jsdelivr.net/npm/@@yaireo/tagify/dist/tagify.css" rel="stylesheet" type="text/css" />
</head>
<body>
	<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

	<script src="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.js"></script>

	<script src="https://cdn.jsdelivr.net/npm/@@yaireo/tagify"></script>
	<script src="https://cdn.jsdelivr.net/npm/@@yaireo/tagify/dist/tagify.polyfills.min.js"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
	<header>
		<div id="menu">
			<a href="/" class="no-link v-align" style="font-size: 28pt">
				<img width="70" height="55" src="/images/logo.jpg" alt="">
				StackUnderflow
			</a>
			<div class="v-align">
				@if (Auth.User != null)
				{
					<a class="no-link v-align" asp-controller="Auth" asp-action="UserDetail" asp-route-login="@Auth.User.Login">
						<img class="mr5" width="40" src="@Auth.User.Image" alt="avatar">
						<span class="mr5">@Auth.User.Login</span>
						<span class="reputation mr5">@Auth.User.Reputation</span>
					</a>
					<a class="button" asp-controller="Auth" asp-action="Logout">Log out</a>
				}	   
				else   
				{	   
					<a class="button" asp-controller="Auth" asp-action="Signup">Sing up</a>
					<a class="button" asp-controller="Auth" asp-action="Login">Log in</a>
				}
			</div>
		</div>
	</header>
  
	<div id="main-content">
		@RenderBody()
	</div>

	<footer>©Copyright</footer>

	

</body>
</html>
