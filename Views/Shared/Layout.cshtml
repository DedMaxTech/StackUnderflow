@inject Auth Auth;
<!DOCTYPE html>
<html lang="en">
<head>	
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Stack Underflow</title>
	<link rel="stylesheet" href="/styles/main.css">
</head>
<body>
	<header>
		<div id="menu">
			<a href="/" class="no-link v-align" style="font-size: 28pt">
				<img width="70" height="55" src="https://d112y698adiu2z.cloudfront.net/photos/production/software_photos/000/632/494/datas/gallery.jpg" alt="">
				StackUnderflow
			</a>
			<div class="v-align">
				@if (Auth.User != null)
				{
					<a class="no-link v-align" asp-controller="Auth" asp-action="UserDetail" asp-route-login="@Auth.User.Login">
						<img class="mr5" width="40" src="@Auth.User.Image" alt="avatar">
						<span class="mr5">@Auth.User.Login</span>
						<span class="reputation mr5">@Auth.User.Reputation</span>
					</a>
					<a class="button" asp-controller="Auth" asp-action="Logout">Log out</a>
				}	   
				else   
				{	   
					<a class="button" asp-controller="Auth" asp-action="Signup">Sing up</a>
					<a class="button" asp-controller="Auth" asp-action="Login">Log in</a>
				}
			</div>
		</div>
	</header>

	<div id="main-content">
		@RenderBody()
	</div>

	<footer>©Copyright</footer>

	<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
