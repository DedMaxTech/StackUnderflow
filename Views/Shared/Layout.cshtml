@inject Auth Auth;
<!DOCTYPE html>
<html lang="en">
<head>	
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Stack Underflow</title>
	<link rel="stylesheet" href="/styles/main.css">
</head>
<body>
	<header>
		<div id="menu">
			<a href="/" class="no-link v-align" style="font-size: 28pt">
				<img width="70" src="https://d112y698adiu2z.cloudfront.net/photos/production/software_photos/000/632/494/datas/gallery.jpg" alt="">
				StackUnderflow
			</a>
			<div class="v-align">
				@if (Auth.User != null)
				{

					<img width="40" src="https://media.istockphoto.com/id/1495088043/vector/user-profile-icon-avatar-or-person-icon-profile-picture-portrait-symbol-default-portrait.jpg?s=612x612&w=0&k=20&c=dhV2p1JwmloBTOaGAtaA3AW1KSnjsdMt7-U_3EZElZ0=" alt="">
					<span>@Auth.User.Login</span>
					<span style="border: 1px solid black">@Auth.User.Reputation</span>
					<a class="button" asp-controller="Auth" asp-action="Logout">Log out</a>
				}	   
				else   
				{	   
					<a class="button" asp-controller="Auth" asp-action="Signup">Sing up</a>
					<a class="button" asp-controller="Auth" asp-action="Login">Log in</a>
				}
			</div>
		</div>
	</header>

	<div id="main-content">
		@RenderBody()
	</div>

	<footer>©Copyright</footer>

	<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
